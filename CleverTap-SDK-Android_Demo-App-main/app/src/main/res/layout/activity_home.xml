<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/update_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Update Profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_to_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Add to Cart"
        app:layout_constraintEnd_toEndOf="@+id/update_profile"
        app:layout_constraintStart_toStartOf="@+id/update_profile"
        app:layout_constraintTop_toBottomOf="@+id/update_profile" />

    <Button
        android:id="@+id/product_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Product Viewed"
        app:layout_constraintEnd_toEndOf="@+id/add_to_cart"
        app:layout_constraintStart_toStartOf="@+id/add_to_cart"
        app:layout_constraintTop_toBottomOf="@+id/add_to_cart" />

    <Button
        android:id="@+id/charged"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Charged"
        app:layout_constraintEnd_toEndOf="@+id/product_view"
        app:layout_constraintStart_toStartOf="@+id/product_view"
        app:layout_constraintTop_toBottomOf="@+id/product_view" />

    <Button
        android:id="@+id/App_Inbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="App Inbox"
        app:layout_constraintEnd_toEndOf="@+id/charged"
        app:layout_constraintStart_toStartOf="@+id/charged"
        app:layout_constraintTop_toBottomOf="@+id/charged" />


    <Button
        android:id="@+id/Other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Other"
        app:layout_constraintEnd_toEndOf="@+id/App_Inbox"
        app:layout_constraintStart_toStartOf="@+id/App_Inbox"
        app:layout_constraintTop_toBottomOf="@+id/App_Inbox" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="65dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Other"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintStart_toStartOf="@+id/Other"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.774" />


</androidx.constraintlayout.widget.ConstraintLayout>